= provide(:title, 'Sign up')

.register-box
  .register-logo
    = link_to 'Rubyboost', root_path
  .register-box-body
    %p.login-box-msg Sign up a new user
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group.has-feedback
        = f.input_field :email, required: true, autofocus: true, placeholder: 'Email', class: 'form-control'
        %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = f.input_field :password, required: true, class: 'form-control', placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .form-group.has-feedback
        = f.input_field :password_confirmation, required: true, placeholder: 'Retype password', class: 'form-control'
        %span.glyphicon.glyphicon-log-in.form-control-feedback
      .row
        .col-xs-8
        .col-xs-4
          = f.button :submit, "Sign up", class: 'btn btn-primary btn-block btn-flat'
    = link_to 'Sign in', new_user_session_path, class: 'text-center'
