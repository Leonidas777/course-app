= provide(:title, 'Sign in')

.login-box
  .login-logo
    = link_to 'Rubyboost', root_path
  .login-box-body
    %p.login-box-msg Sign in to start your session
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group.has-feedback
        = f.input_field :email, required: false, autofocus: true, class: 'form-control', placeholder: 'Email'
        %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = f.input_field :password, required: false, class: 'form-control', placeholder: 'Password'
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .row
        .col-xs-8
        .col-xs-4
          = f.button :submit, "Sign In", class: 'btn btn-primary btn-block btn-flat'
    = link_to 'Sign up', new_user_registration_path
