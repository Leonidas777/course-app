.row
  .col-sm-6.col-md-6.col-lg-3
    = simple_form_for [:users, course] do |f|
      .box-body
        .form-group
          = f.input :title, placeholder: 'Enter title', input_html: { class: 'form-control' }
        .form-group
          = f.input :picture, as: :file
        .form-group
          = f.submit 'Save', class: 'btn btn-primary'
