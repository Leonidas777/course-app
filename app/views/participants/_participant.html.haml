%tr{id: "course-participant-#{user.id}"}
  %td= "#{user.first_name} #{user.last_name}"
  %td
    - if user_signed_in? && user.id == current_user.id
      .row
        .col-xs-4.col-sm-4.col-md-4.col-lg-4
          = link_to 'Unsubscribe', course_subscriptions_path(course), class: 'btn btn-block btn-info', method: :delete, remote: true
    - if current_user.id == course.user_id
      .row
        .col-xs-4.col-sm-4.col-md-4.col-lg-4
          = link_to 'Expel', course_blocked_users_path(user_id: user.id), class: 'btn btn-block btn-info', method: :post, remote: true
