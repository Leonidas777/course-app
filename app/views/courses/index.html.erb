<h1>Courses</h1>

<%= link_to 'New course', new_course_path %>

<% if @courses.present? %>
<ul>
  <% @courses.each do |course| %>
    <li>
      <%= course.title %>
      <%= link_to 'Edit course', edit_course_path(course) %>
      <%= link_to 'Delete course', course_path(course), method: :delete, data: {confirm: 'Sure'} %></li>
  <% end %>
</ul>
<% else %>
  <h2>No courses</h2>
<% end %>